<%= render 'users/userinfo', user: @user, book: @book %>


<h2>Books</h2>

<table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    
      <% @books.each do |books| %>
        <tr>
          <td><%= image_tag @user.get_image(100,100) %></td>
          <td><%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= link_to books.title, book_path(books.id) %></td>
          <td><%= books.body %></td>
        </tr>
      <% end %>
    </table>