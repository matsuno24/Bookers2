      
      <script src="https://kit.fontawesome.com/8c3165965e.js" crossorigin="anonymous"></script>
      
      
      <h2>User info</h2>
      
      <table>
        <tr>
          <%= image_tag user.get_image(100,100) %>
        </tr>
        
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
        
        <tr>
          <th>
            <%= link_to edit_user_path(user.id) do %>
            <button><i class="fas fa-user-cog"></i></button>
            <% end %>
          </th>
        </tr>
      </table>
      
      
      
      <h2>New book</h2>
      <%= form_with model: book do |f| %>
      
      <h4>Title</h4>
      <%= f.text_field :title %>
      
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      
      <%= f.submit 'Create Book', class: "btn btn-secondary" %>
      <% end %>