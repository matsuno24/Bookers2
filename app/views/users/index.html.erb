<div class="container">
  <div class="row">

<div class = "col-lg-3">

<%= render 'userinfo', user: @user, book: @book %>
</div>


<div class="col-lg-8">
<h2>Users</h2>
<table class="table table-striped">
    <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
    </tr>
    <% @users.each do |users| %>
        <tr>
          <td><%= image_tag users.get_image(100,100) %></td>
          <td><%= users.name %></td>
          <td><%= link_to 'Show', user_path(users.id) %></td>
        </tr>
    <% end %>
</table>
</div>
</div>
</div>