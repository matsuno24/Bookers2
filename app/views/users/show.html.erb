<%= flash[:notice] %>

<%= render 'userinfo', user: @user, book: @book %>

<h2>Books</h2>


<table>
    <tr>
        <th>Title</th>
        <th>Opinion</th>
    </tr>
    <% @user.books.each do |books| %>
    <tr>
        <td><%= image_tag @user.get_image(100,100) %></td>    
        <td><%= link_to books.title, book_path(books.id) %></td> 
        <td><%= books.body %></td>
    </tr>
    <% end %>
</table>