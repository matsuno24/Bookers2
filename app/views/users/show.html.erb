<%= flash[:notice] %>
<div class="container">
  <div class="row">

<div class = "col-lg-3">
<%= render 'userinfo', user: @user, book: @book %>
</div>


<div class = "col-lg-8">
<h2>Books</h2>

<table class = "table table-striped">
    <tr>
        <th>Title</th>
        <th>Opinion</th>
    </tr>
    <% @user.books.each do |books| %>
    <tr>
        <td><%= image_tag @user.get_image(100,100) %></td>    
        <td><%= link_to books.title, book_path(books.id) %></td> 
        <td><%= books.body %></td>
    </tr>
    <% end %>
</table>
</div>
</div>
</div>