<%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container">
    <div class="row">
        <div class="mx-auto col-3">

          <% if @user.errors.any? %>
            <%= @user.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          
          
          
          <h2>User info</h2>
          
          <%= form_with model: @user do |f| %>
            
            <label for="inputName">Name</label></br>
            <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
            
            <label for="inputImage">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
            
            <label for="inputIntroduction">Introduction</label>
            <%= f.text_area :introduction %><br>
            
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          <% end %>
        </div>
    </div>
</div>